<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/image_view">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textStyle="bold"
        android:id="@+id/instructions"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="67dp"
        android:layout_marginTop="49dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desertLayout"
        android:focusable="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/desertLayout"
            android:layout_toRightOf="@+id/desertLayout">

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/smallImg"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/instructions"
        android:layout_toRightOf="@+id/desertLayout" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/smallImg2"
        android:layout_alignTop="@+id/smallImg"
        android:src="@drawable/icecream"
        android:layout_toLeftOf="@+id/instructions" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/smallImg3"
        android:background="#FF0000"
        android:layout_alignTop="@+id/smallImg2"
        android:layout_alignRight="@+id/instructions"
        android:layout_alignEnd="@+id/instructions" />

    <TextView
        android:id="@+id/dishName"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="255dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>